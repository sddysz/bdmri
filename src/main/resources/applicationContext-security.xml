<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="true">
    <bean id="customDefinitionMetaSource" class="cn.dongyeshengzhen.framework.security.shiro.ShiroDefinitionSectionMetaSource">
        <property name="filterChainDefinitions">
            <value>
                /resource/* = anon
                /weixin*/* = anon
                /app/mobile/userBind/* = anon
                /app/mobile/customerservice/* = wxCustomUserAuthc
            </value>
        </property>
    </bean>

    <bean id="customShiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="customSecurityManager" />
        <property name="loginUrl" value="/weixin/auth/customer"/>
        <property name="unauthorizedUrl" value="/common/403.jsp" />
        <property name="filterChainDefinitionMap" ref="customDefinitionMetaSource"/>
        <property name="filters">
            <map>
                <entry key="wxCustomUserAuthc" value-ref="weiXinCustomUserAuthenticationFilter"/>
            </map>
        </property>
    </bean>
    <bean id="adminSecurityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realms">
            <list>
                <bean id="adminCusRealm" class="cn.dongyeshengzhen.framework.security.shiro.ShiroAuthorizingRealm" />
            </list>
        </property>
        <property name="sessionManager" ref="sessionManager"/>
    </bean>

    <bean id="sessionManager" class="org.apache.shiro.web.session.mgt.DefaultWebSessionManager">
        <property name="sessionIdCookie.name" value="sid"/>
        <property name="globalSessionTimeout" value="1800000"/>
    </bean>

    <bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor" />


    <bean id="userManager" class="cn.publink.framework.security.service.UserManager"/>

    <!--	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
            <property name="staticMethod" value="org.apache.shiro.SecurityUtils.setSecurityManager" />
            <property name="arguments" ref="securityManager" />
        </bean>-->

</beans>
